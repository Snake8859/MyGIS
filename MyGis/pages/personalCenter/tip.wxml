<!--pages/personalCenter/signature.wxml-->
<view style='height:{{screenHeight}}rpx'>
  <view class='container-tip'>
    <form bindsubmit='submitTip'>
        <view class='tip-Box'>
          <textarea name='tipWord' class='tip-textarea' placeholder='输入建议'></textarea>
          <input  name='telePhone' class='tip-input' placeholder='输入电话（选填）'></input>
        </view>
        
        <button class='tip-button'  form-type='submit' type='primary'>确定</button>
    </form>
  </view>
</view>
